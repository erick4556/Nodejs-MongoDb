
<html>

<% include ../partials/header %>
<% include ../partials/sidebar_nav_admin %>


 <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
 </h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                             <a class="btn btn-dark" href="/register" role="button"><i class="fa fa-plus-circle "></i> Agregar Usuario</a>   
       
                        </div>
                        <div class="panel-body">

                             <% if(usuarios.length>0) { %>

                             <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>Nombre de Usuario</th>
                                        <th>Nombre</th>
                                        <th>Apellido</th>
                                        <th>Cedula</th>
                                        <th>Telefono</th>
                                         <th>Rol</th>
                         
                                        <th>Accion</th>
                                    </tr>
                                </thead>
                                <tbody>
                                
                            <% for(var i=0; i<usuarios.length;i++) { %>
                              <tr>
                                  
                                   <td><%= usuarios[i].username%></td>
                                   <td><%= usuarios[i].nombre%></td>
                                   <td><%= usuarios[i].apellido%></td>
                                    <td><%=usuarios[i].cedula%></td>
                                    <td><%=usuarios[i].telefono%></td>
                                    <td><%=usuarios[i].rol%></td>
                                   

                                   <td>
                                   <form action="/eliminar_usuario/<%=usuarios[i]._id%>" method="post">
                                   <button type="submit" class="btn btn-danger btn-xs" style="float: right;">Borrar</button>
                                  </form>


                                    <a class="btn btn-warning btn-xs" href="/editar_usuario/<%=usuarios[i]._id%>">Actualizar </a>

                                 

                                   
                                     </td>

                               
                                                                            
                                  


                                  
                                  
                              </tr>
                                <% } %>
                      

                                </tbody>
                            </table>

                            <% } else { %>
                                <div>No hay Usuarios</div>
                              <% } %>

                            
                            

                                </div>

                                </div>
                         
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->
   
   <% include ../partials/footer %>

</html>