<html>

<% include ../partials/header %>
<% include ../partials/sidebar_nav_rutero %>


 <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
 </h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
       
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-6">

                                    <form method="post" action="/update_manifiesto/<%=manifiesto._id%>">

                                  <div class="alert alert-success">
                                  <strong>Fecha Actual</strong>
                                  <br><strong><%=manifiesto.fecha %></strong>
                                   </div>


                                        <div class="form-group">

                                            <label>Fecha</label>

                                            <input class="form-control" name="fecha" type="date"  required="">
                                        </div> 

                                  
                                   <div class="alert alert-success">
                                  <strong>Ruta Actual</strong>
                                  <br><strong><%=manifiesto.ruta %></strong>
                                   </div>
                          

                                  <div class="form-group" required>
                                            <label>Ruta</label>

                                        <i class="fa fa-spinner fa-spin "></i>
                                       <span class="sr-only">Loading...</span>

                                         <select class="form-control" name="ruta" required>

                                                        
                                         <% for(var i=0; i<ruta.length;i++) { %>

                                          <option value="<%=ruta[i].descripcion%>" >
                                            <%=ruta[i].descripcion%> </option>

                                              <% } %>

                                            </select>


                                    </div>

                                     <div class="alert alert-success">
                                  <strong>Vehiculo Actual</strong>
                                  <br><strong><%=manifiesto.vehiculo %></strong>
                                   </div>



                                  <div class="form-group" required>
                                            <label>Transporte</label>

                                        <i class="fa fa-spinner fa-spin "></i>
                                       <span class="sr-only">Loading...</span>


                                 <select class="form-control" name="vehiculo" required>

                                                
                                 <% for(var j=0; j<transporte.length;j++) { %>

                                  <option value="<%=transporte[j].placa%>" >
                                    <%=transporte[j].placa%> - <%=transporte[j].modelo%>  </option>

                                      <% } %>

                                 </select>
                                               
                                        </div>


                                    
                                        <button type="submit" class="btn btn-primary">Submit Button</button>
                                        <button type="reset" class="btn btn-default">Reset Button</button>
                                    </form>
                                  
                                                               
                                  </div>

                                </div>

                                </div>
                         
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->
   
   <% include ../partials/footer %>

</html>