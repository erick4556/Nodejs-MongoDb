
<html>

<% include ../partials/header %>
<% include ../partials/sidebar_nav_recepcion_mercancia %>


 <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
 </h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        
                        <div class="panel-body">

                             <% if(paquete.length>0) { %>

                             <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>ID_Manifiesto</th>
                                        <th>ID_Paquete</th>
                                        <th>Accion</th>
                                       
                                    </tr>
                                </thead>
                                <tbody>
                                
                            <% for(var i=0; i<paquete.length;i++) { %>
                              <tr>

                                  <td><%=paquete[i].id_manifiesto%></td> 
                                  <td><%=paquete[i].id_paquete%></td>
                                 <td>
                                 <form action="/actualizar_entregado/<%=paquete[i]._id%>" method="post">
                                   <button type="submit" class="btn btn-danger "  style="float: right;" >Marcar como entregado</button>
                                  </form> 
                              

                                    <a class="btn btn-warning " href="/ver_detalle_paquete/<%=paquete[i].id_paquete%>">Detalle </a>

                                </td>


                              </tr>
                                <% } %>
                      

                                </tbody>
                            </table>

                            <% } else { %>
                                <div>Todos los paquetes han sido entregados </div>
                              <% } %>
                            

                                </div>

                                </div>
                         
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->
   
   <% include ../partials/footer %>

</html>