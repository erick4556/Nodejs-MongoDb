
<html>

<% include ../partials/header %>
<% include ../partials/sidebar_nav_rutero %>


 <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
 </h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                             <a class="btn btn-dark" href="/crear_manifiesto" role="button"><i class="fa fa-plus-circle "></i> Crear Manifiesto</a>   
       
                        </div>
                        <div class="panel-body">

                             <% if(manifiesto.length>0) { %>

                             <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Fecha</th>
                                        <th>Ruta</th>
                                        <th>Vehiculo</th>
                                        <th>Accion</th>
                                       
                                    </tr>
                                </thead>
                                <tbody>
                                
                            <% for(var i=0; i<manifiesto.length;i++) { %>
                              <tr>
                                  <td><%=manifiesto[i]._id%></td>
                                  <td><%=manifiesto[i].fecha%></td>
                                  <td><%=manifiesto[i].ruta%></td>
                                  <td><%=manifiesto[i].vehiculo%></td>
                                  <td>

                                   <form action="/eliminar_manifiesto/<%=manifiesto[i]._id%>" method="post">
                                   <button type="submit" class="btn btn-danger btn-xs"  style="float: right;" >Borrar</button>
                                  </form>

                                    <a class="btn btn-warning btn-xs " href="/editar_manifiesto/<%=manifiesto[i]._id%>">Actualizar </a>

                                      <a class="btn btn-primary btn-xs " href="/ver_manifiesto_detalle/<%=manifiesto[i]._id%>">Cargar </a>


                                  </td>
                                    



                                  

                        
                                  
                              </tr>
                                <% } %>
                      

                                </tbody>
                            </table>

                            <% } else { %>
                                <div>No hay Manifiestos creados</div>
                              <% } %>

                            
                            

                                </div>

                                </div>
                         
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->
   
   <% include ../partials/footer %>

</html>