
<html>

<% include ../partials/header %>
<% include ../partials/sidebar_nav_rutero %>


 <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
 </h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                             <a class="btn btn-dark" href="/create_sucursal" role="button"><i class="fa fa-plus-circle "></i> Agregar Sucursal</a>   
       
                        </div>
                        <div class="panel-body">

                             <% if(sucursal.length>0) { %>

                             <table width="95%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Descripcion</th>
                         
                                        <th>Accion</th>
                                       
                                    </tr>
                                </thead>
                                <tbody>
                                
                            <% for(var i=0; i<sucursal.length;i++) { %>
                              <tr>
                                  <td><%= sucursal[i]._id%></td>
                                   <td><%= sucursal[i].descripcion%></td>


                                    <td>
                                   <form action="/eliminar_sucursal/<%=sucursal[i]._id%>" method="post">
                                   <button type="submit" class="btn btn-danger "  style="float: right;" >Borrar</button>
                                  </form> 

                                    <a class="btn btn-warning " href="/editar_sucursal/<%=sucursal[i]._id%>">Actualizar </a>

                                
                                   
                                     </td>



                        
                                  
                              </tr>
                                <% } %>
                      

                                </tbody>
                            </table>

                            <% } else { %>
                                <div>No hay Sucursales</div>
                              <% } %>

                            
                            

                                </div>

                                </div>
                         
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->
   
   <% include ../partials/footer %>

</html>