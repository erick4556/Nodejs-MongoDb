
<html>

<% include ../partials/header %>
<% include ../partials/sidebar_nav_rutero %>


 <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
 </h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                             <a class="btn btn-dark" href="/create_encomienda" role="button"><i class="fa fa-plus-circle "></i> Agregar Encomienda</a>   
       
                        </div>
                        <div class="panel-body">

                             <% if(encomienda.length>0) { %>

                             <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Fecha</th>
                                        <th>Sucursal Origen</th>
                                        <th>Sucursal Destino</th>
                                        <th>Destinatario</th>
                                        <th>Remitente</th>
                                        <th>Valor</th>
                                        <th>Accion&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
                                       
                                    </tr>
                                </thead>
                                <tbody>
                                
                            <% for(var i=0; i<encomienda.length;i++) { %>
                              <tr>
                                  <td><%=encomienda[i]._id%></td>
                                  <td><%=encomienda[i].fecha%></td>
                                  <td><%=encomienda[i].suc_origen%></td>
                                  <td><%=encomienda[i].suc_destino%></td>
                                  <td><%=encomienda[i].quien_recibe%></td>
                                  <td><%=encomienda[i].quien_envia%></td>
                                  <td><%=encomienda[i].valor%></td>


                                     <td>


                                       <form action="/eliminar_encomienda/<%=encomienda[i]._id%>" method="post">
                                   <button type="submit" class="btn btn-danger btn-xs"  style="float: right;" >Borrar</button>
                                  </form> 
                              
                                    <a class="btn btn-warning btn-xs " href="/editar_encomienda/<%=encomienda[i]._id%>">Actualizar </a>

                                    <a class="btn btn-primary btn-xs " href="/show_paquete/<%=encomienda[i]._id%>">Paquete </a>

                                    



                                   
                                     </td>




                                
                     



                        
                                  
                              </tr>
                                <% } %>
                      

                                </tbody>
                            </table>

                            <% } else { %>
                                <div>No hay Encomiendas</div>
                              <% } %>

                            
                            

                                </div>

                                </div>
                         
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->
   
   <% include ../partials/footer %>

</html>