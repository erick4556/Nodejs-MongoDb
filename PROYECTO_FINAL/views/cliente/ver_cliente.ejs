
<html>

<% include ../partials/header %>
<% include ../partials/sidebar_nav_logistica %>


 <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
 </h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                             <a class="btn btn-dark" href="/create_clien" role="button"><i class="fa fa-plus-circle "></i> Agregar Cliente</a>   
       
                        </div>
                        <div class="panel-body">

                             <% if(cliente.length>0) { %>

                             <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>Cédula</th>
                                        <th>Nombre</th>
                                        <th>Dirección</th>
                                        <th>Teléfono</th>
                                        <th>Correo</th>
                                        
                         
                                        <th>Accion</th>
                                    </tr>
                                </thead>
                                <tbody>
                                
                            <% for(var i=0; i<cliente.length;i++) { %>
                              <tr>
                                  
                                   <td><%=cliente[i].cedula%></td>
                                   <td><%=cliente[i].nombre%></td>
                                   <td><%=cliente[i].direccion%></td>
                                    <td><%=cliente[i].telefono%></td>
                                    <td><%=cliente[i].correo%></td>
                                    
                                   

                                   <td>
                                   <form action="/eliminar_cliente/<%=cliente[i]._id%>" method="post">
                                   <button type="submit" class="btn btn-danger btn-xs" style="float: right;">Borrar</button>
                                  </form>


                                    <a class="btn btn-warning btn-xs" href="/editar_cliente/<%=cliente[i]._id%>">Actualizar </a>

                                 

                                   
                                     </td>

                               
                                                                            
                                  


                                  
                                  
                              </tr>
                                <% } %>
                      

                                </tbody>
                            </table>

                            <% } else { %>
                                <div>No hay Transporte</div>
                              <% } %>

                            
                            

                                </div>

                                </div>
                         
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->
   
   <% include ../partials/footer %>

</html>