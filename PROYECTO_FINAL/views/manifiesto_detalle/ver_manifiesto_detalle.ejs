
<html>

<% include ../partials/header %>
<% include ../partials/sidebar_nav_rutero %>


 <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
 </h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                             <a class="btn btn-dark" href="/agregar_manifiesto_detalle/<%=id %>" role="button"><i class="fa fa-plus-circle "></i> Agregar detalle</a>   
       
                        </div>
                        <div class="panel-body">

                             <% if(manifiestodetalle.length>0) { %>

                             <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>ID_Manifiesto</th>
                                        <th>ID_Paquete</th>
                    
                                        <th>Accion</th>
                                       
                                    </tr>
                                </thead>
                                <tbody>
                                
                            <% for(var i=0; i<manifiestodetalle.length;i++) { %>
                              <tr>
                                  <td><%=manifiestodetalle[i].id_manifiesto%></td>
                                   <td><%=manifiestodetalle[i].id_paquete%></td>

                                   <td>

                                   <form action="/eliminar_manifiesto_detalle/<%=manifiestodetalle[i]._id%>" method="post">
                                   <button type="submit" class="btn btn-danger btn-xs"  >Borrar</button>
                                  </form>


                                  </td>
                  
                                  
                              </tr>
                                <% } %>
                      

                                </tbody>
                            </table>

                            <% } else { %>
                                <div>El manifiesto no tiene paquetes cargados </div>
                              <% } %>

                            
                            

                                </div>

                                </div>
                         
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->
   
   <% include ../partials/footer %>

</html>