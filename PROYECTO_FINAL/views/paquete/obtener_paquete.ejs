
<html>

<% include ../partials/header %>
<% include ../partials/sidebar_nav_rutero %>


 <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
 </h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                             <a class="btn btn-dark" href="/agregar_paquete/<%=id %>" role="button"><i class="fa fa-plus-circle "></i> Agregar Paquetes</a>   
       
                        </div>
                        <div class="panel-body">

                             <% if(paquete.length>0) { %>

                             <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>ID_Encomienda</th>
                                        <th>Descripcion</th>
                                        <th>Accion</th>
                                       
                                    </tr>
                                </thead>
                                <tbody>
                                
                            <% for(var i=0; i<paquete.length;i++) { %>
                              <tr>
                                  <td><%=paquete[i]._id%></td>
                                   <td><%=paquete[i].id_encomienda%></td>
                                    <td><%=paquete[i].descripcion%></td>

                                     <td>
                                   <form action="/eliminar_paquete/<%=paquete[i]._id%>" method="post">
                                   <button type="submit" class="btn btn-danger btn-xs"  style="float: right;" >Borrar</button>
                                  </form> 

                                    <a class="btn btn-warning btn-xs " href="/editar_paquete/<%=paquete[i]._id%>">Actualizar </a>
                                    

                                
                                   
                                     </td>
                             
                                   
                            



                        
                                  
                              </tr>
                                <% } %>
                      

                                </tbody>
                            </table>

                            <% } else { %>
                                <div>La encomienda no tiene paquetes </div>
                              <% } %>

                            
                            

                                </div>

                                </div>
                         
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->
   
   <% include ../partials/footer %>

</html>