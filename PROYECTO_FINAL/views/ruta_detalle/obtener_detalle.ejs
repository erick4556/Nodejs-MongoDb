
<html>

<% include ../partials/header %>
<% include ../partials/sidebar_nav_rutero %>


 <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
 </h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                             <a class="btn btn-dark" href="/agregar_detalle/<%=id %>" role="button"><i class="fa fa-plus-circle "></i> Agregar detalle</a>   
       
                        </div>
                        <div class="panel-body">

                             <% if(rutadetalle.length>0) { %>

                             <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>ID_RUTA</th>
                                        <th>Desde</th>
                                        <th>Hasta</th>
                                        <th>Orden</th>
                                        <th>Accion</th>
                                       
                                    </tr>
                                </thead>
                                <tbody>
                                
                            <% for(var i=0; i<rutadetalle.length;i++) { %>
                              <tr>
                                  <td><%=rutadetalle[i].id_ruta%></td>
                                   <td><%=rutadetalle[i].desde%></td>
                                    <td><%=rutadetalle[i].hasta%></td>
                                     <td><%=rutadetalle[i].orden%></td>
                                   
                                     </td>

                                   <td>
                                   <form action="/eliminar_ruta_detalle/<%=rutadetalle[i]._id%>" method="post">
                                   <button type="submit" class="btn btn-danger btn-xs"  style="float: right;" >Borrar</button>
                                  </form> 

                                    <a class="btn btn-warning btn-xs " href="/editar_ruta_detalle/<%=rutadetalle[i]._id%>">Actualizar </a>
                                    

                                
                                   
                                     </td>




                        
                                  
                              </tr>
                                <% } %>
                      

                                </tbody>
                            </table>

                            <% } else { %>
                                <div>La ruta no tiene detalle </div>
                              <% } %>

                            
                            

                                </div>

                                </div>
                         
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->
   
   <% include ../partials/footer %>

</html>