<html>

<% include ../partials/header %>
<% include ../partials/sidebar_nav_rutero %>


 <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
 </h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
       
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-6">

                                    <form method="post" action="/update_ruta_detalle/<%=rutadetalle._id%>">

                               <div class="alert alert-success">
                                  <strong>Actual</strong>
                                  <br><strong>Desde:</strong> <%=rutadetalle.desde %>
                                  <strong>, Hasta:</strong> <%=rutadetalle.hasta %>
                                </div>

                                        

                                  <div class="form-group" required>

                                            <label>Desde</label>

                                        <i class="fa fa-spinner fa-spin "></i>
                                       <span class="sr-only">Loading...</span>

                                         <select class="form-control" name="desde" required>

                                                        
                                         <% for(var i=0; i<sucursal.length;i++) { %>

                                          <option value="<%=sucursal[i].descripcion%>" >
                                            <%=sucursal[i].descripcion%> </option>

                                              <% } %>

                                            </select>


                                    </div>


                                  <div class="form-group" required>
                                            <label>Hasta</label>

                                        <i class="fa fa-spinner fa-spin "></i>
                                       <span class="sr-only">Loading...</span>


                                 <select class="form-control" name="hasta" required>

                                                
                                 <% for(var j=0; j<sucursal.length;j++) { %>

                                  <option value="<%=sucursal[j].descripcion%>" >
                                    <%=sucursal[j].descripcion%> </option>

                                      <% } %>

                                 </select>
                                               
                                        </div>


                                        <div class="form-group">

                                            <label>Orden</label>

                                            <input class="form-control" name="orden" type="text"  value="<%=rutadetalle.orden%>" required="">
                                        </div> 

                                    
                                        <button type="submit" class="btn btn-primary">Submit Button</button>
                                        <button type="reset" class="btn btn-default">Reset Button</button>
                                    </form>
                                  
                                                               
                                  </div>

                                </div>

                                </div>
                         
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->
   
   <% include ../partials/footer %>

</html>